<!-- <h1>Steps</h1> -->
  <% @steps.each do |step| %>
    <% if @experiment == step.experiment %>
      <%= step.number %><br />
      <%= step.body %><br />
      <%= image_tag step.image %><br />
      <%= link_to 'Show', step %>
      <%= link_to 'Edit', edit_step_path(step) %>
      <%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %><br />
    <% end %>
  <% end %>
<br>

<%= link_to 'New Step', new_step_path %>